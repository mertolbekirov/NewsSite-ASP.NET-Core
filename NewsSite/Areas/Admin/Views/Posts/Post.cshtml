@model PostFormModel

@{
    ViewBag.Title = "Give us feedback!";
}

<script src="js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
<script>
      tinymce.init({
        selector: '#content'
      });
</script>


<h5 class="text-center">New Post</h5>

<form asp-action="Post" asp-controller="Posts" asp-area="Admin" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <textarea asp-for="Content" class="form-control" placeholder="Your title here..."></textarea>
        <span asp-validation-for="Content" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoUrl">Video Url</label>
        <input asp-for="VideoUrl" class="form-control" rows="3"/>
        <span asp-validation-for="VideoUrl" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Language">Video Url</label>
        <input asp-for="Language" class="form-control" rows="3"/>
        <span asp-validation-for="Language" class="small text-danger"></span>
    </div>
    <input type="file" id="file1" 
           name="file1" />
    <input type="submit" class="btn btn-primary mt-3" value="Post!" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}